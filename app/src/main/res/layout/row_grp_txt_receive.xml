<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="message"
            type="com.melavo.firebasechat.db.data.GroupMessage" />

        <variable
            name="chatUsers"
            type="com.melavo.firebasechat.db.data.ChatUser[]" />

    </data>

    <LinearLayout
        style="@style/VView"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:id="@+id/view_msg_holder"
            style="@style/VView"
            android:layout_marginEnd="90dp"
            android:background="@drawable/shape_receive_msg"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:id="@+id/view_detail"
                style="@style/LView">

                <TextView
                    style="@style/TxtSemiSmallStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="Name"
                    android:textColor="@color/colorTop"
                    chatUsers="@{chatUsers}"
                    message="@{message}"
                    android:textSize="16sp" />

                <TextView
                    style="@style/TxtRgStyle"
                    showUserIdIfNotLocalSaved="@{chatUsers}"
                    currentMessage="@{message}"
                    android:textColor="@color/colorDefaultBg"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_msg"
                style="@style/WView"
                android:hint="This is received message"
                android:text="@{message.textMessage.text}"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/txt_msg_time"
            style="@style/TxtRgStyle"
            android:layout_marginStart="2dp"
            showGrpMsgTime="@{message}"
            android:textSize="16sp" />

    </LinearLayout>
</layout>